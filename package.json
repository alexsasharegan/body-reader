{
  "name": "body-reader",
  "version": "1.1.1",
  "description": "Lazy request body stream consumption.",
  "main": "lib/index.js",
  "types": "lib/index.d.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "prerelease": "npm run test",
    "release": "standard-version",
    "postrelease": "git push --follow-tags origin master && npm publish",
    "test:server": "nodemon --exec \"ts-node tmp/server.ts\"",
    "test": "jest"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(js|ts)$"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexsasharegan/body-reader.git"
  },
  "author": "Alex Regan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alexsasharegan/body-reader/issues"
  },
  "homepage": "https://github.com/alexsasharegan/body-reader#readme",
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "@types/node": "^10.5.7",
    "axios": "^0.18.0",
    "jest": "^23.5.0",
    "nodemon": "^1.18.3",
    "standard-version": "^4.4.0",
    "supertest": "^3.1.0",
    "ts-jest": "^23.1.3",
    "ts-node": "^7.0.0",
    "typescript": "^3.0.1"
  },
  "dependencies": {
    "fmt-bytes": "^1.0.2",
    "safe-types": "^4.2.0"
  }
}
